

---
const items =
  Astro.props.items ??
  [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    { href: "/blog", label: "Blog" },
    { href: "/tags", label: "Tags" },
  ];
---

<nav class="nav" aria-label="Main navigation">
  <ul id="main-menu" class="nav-links">
    {items.map((item) => (
      <li><a href={item.href}>{item.label}</a></li>
    ))}
  </ul>
</nav>
