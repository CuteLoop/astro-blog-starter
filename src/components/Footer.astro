---
import Social from "./Social.astro";

const profiles = [
  { platform: "GitHub", username: "cuteloop" },
  { platform: "LinkedIn", username: "joel-maldonado-9ab79a15b" },
];
---

<footer class="site-footer">
  
  <div class="shell footer-inner">
    <p class="footer-lead">
      Curious? Here’s where I share code, writing, and works-in-progress:
    </p>

    <ul class="footer-links">
      {profiles.map(({ platform, username }) => (
        <li><Social platform={platform} username={username} /></li>
      ))}
    </ul>

    <p class="footer-meta">© {new Date().getFullYear()} Joel</p>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid rgba(229, 231, 235, 0.12);
    color: rgba(255, 255, 255, 0.92); /* lighter footer text */
    margin-top: 3rem;
  }

  .footer-inner {
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 1.5rem 1rem;
  }

  .footer-lead {
    margin: 0;
    font-size: 0.95rem;
    color: inherit;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    list-style: none;
    padding: 0;
    margin: 0.9rem 0 1.1rem;
  }

  .footer-links a {
    color: inherit;
  }

  .footer-meta {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.75); /* slightly lighter than before */
  }
</style>
